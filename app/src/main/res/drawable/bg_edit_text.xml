<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Define the solid color for your edit text background -->
            <solid android:color="@android:color/white" />

            <!-- Optionally, define a border for the edit text -->
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />

            <!-- Define the corners of the edit text background -->
            <corners android:radius="8dp" />

            <!-- Optionally, add a padding to the edit text background -->
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
